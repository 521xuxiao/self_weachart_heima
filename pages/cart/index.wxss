.cart_wrap .cart_btn {
  padding-top: 30rpx;
}
.cart_wrap .cart_btn button {
  width: 80%;
}
.cart_wrap .cart_address {
  padding: 0 20rpx;
  color: #666;
  font-size: 26rpx;
}
.cart_wrap .cart_address .adress_info {
  overflow: hidden;
  padding-top: 10rpx;
}
.cart_wrap .cart_address .adress_info .info {
  float: left;
}
.cart_wrap .cart_address .adress_info .phone {
  float: right;
}
.cart_row {
  margin-top: 20rpx;
  padding-bottom: 92rpx;
}
.cart_row .title {
  padding: 20rpx 0;
  border-top: 1rpx solid var(--themeColor);
  border-bottom: 1rpx solid var(--themeColor);
  color: #666;
  font-size: 30rpx;
  padding-left: 10rpx;
}
.cart_row .context .context_item {
  display: flex;
  border-bottom: 1px solid #999;
  padding: 20rpx 10rpx;
}
.cart_row .context .context_item .checked {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_row .context .context_item .img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_row .context .context_item .img image {
  width: 70%;
}
.cart_row .context .context_item .context_main {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart_row .context .context_item .context_main .main_title {
  color: #666;
  font-size: 24rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart_row .context .context_item .context_main .main_row {
  overflow: hidden;
}
.cart_row .context .context_item .context_main .main_row .main_left {
  float: left;
  color: var(--themeColor);
}
.cart_row .context .context_item .context_main .main_row .main_right {
  float: right;
  display: flex;
  color: #666;
}
.cart_row .context .context_item .context_main .main_row .main_right .add {
  border: 1px solid #666;
  width: 42rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  font-weight: bolder;
}
.cart_row .context .context_item .context_main .main_row .main_right .numbers {
  margin: 0 16rpx;
  line-height: 42rpx;
}
.cart_row .context .context_item .context_main .main_row .main_right .delete {
  border: 1px solid #666;
}
.cart_row .context .context_item.context_item:last-child {
  border-bottom: 0;
}
.fixed_bottom {
  position: fixed;
  width: 100%;
  height: 90rpx;
  border-top: 1rpx solid #eee;
  left: 0;
  bottom: 0;
  background: #fff;
  display: flex;
}
.fixed_bottom .bottom_left {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fixed_bottom .bottom_left .checke {
  color: #666;
}
.fixed_bottom .bottom_right {
  flex: 4;
  display: flex;
  justify-content: flex-end;
}
.fixed_bottom .bottom_right .fixed_left {
  color: #333;
}
.fixed_bottom .bottom_right .fixed_center {
  margin: 0 18rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.fixed_bottom .bottom_right .fixed_center .fixed_top {
  color: var(--themeColor);
  font-size: 30rpx;
}
.fixed_bottom .bottom_right .fixed_center .fix_bottom {
  font-size: 20rpx;
  color: #999;
}
.fixed_bottom .bottom_right .fixed_right {
  height: 100%;
  background: var(--themeColor);
  width: 200rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
