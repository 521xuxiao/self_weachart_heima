/* pages/goods_list/index.wxss */
.srcoll_view {
  height: calc(100vh - 190rpx);
  margin-top: 10rpx;
}
.srcoll_view .one {
  border-bottom: 1rpx solid #f0f0f0;
}
.srcoll_view .one .out_wrap {
  display: flex;
  height: 180rpx;
}
.srcoll_view .one .out_wrap .left_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.srcoll_view .one .out_wrap .left_img .img1 {
  width: 60%;
}
.srcoll_view .one .out_wrap .container {
  flex: 5;
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-around;
}
.srcoll_view .one .out_wrap .container .view_p {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.srcoll_view .one .out_wrap .container .view_price {
  color: var(--themeColor);
  font-size: 38rpx;
}
